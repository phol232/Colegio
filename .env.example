# Application
APP_NAME="Academic Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Database OLTP (Transactional) - Via PgBouncer
DB_CONNECTION=pgsql
DB_HOST=pgbouncer
DB_PORT=6432
DB_DATABASE=academic_oltp
DB_USERNAME=academic
DB_PASSWORD=your_secure_password_here

# Database OLAP (Analytical) - Same PostgreSQL server, different database
DB_OLAP_CONNECTION=pgsql
DB_OLAP_HOST=pgbouncer
DB_OLAP_PORT=6432
DB_OLAP_DATABASE=academic_olap
DB_OLAP_USERNAME=academic
DB_OLAP_PASSWORD=your_secure_password_here

# Note: Un solo contenedor PostgreSQL con DOS bases de datos:
# - academic_oltp: Tablas transaccionales (usuarios, cursos, asistencias, notas)
# - academic_olap: Tablas analíticas (dim_*, fact_rendimiento_estudiantil)
# Ambas accesibles a través de PgBouncer para connection pooling

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=academic_cache

# Queue
QUEUE_CONNECTION=redis
QUEUE_PREFIX=academic_queue

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=1440

# Broadcasting
BROADCAST_DRIVER=redis

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost/api/auth/google/callback

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080
SANCTUM_TOKEN_EXPIRATION=1440

# Mail (Optional - for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@academic.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_DAYS=30

# Performance
PHP_FPM_MAX_CHILDREN=40
PHP_FPM_START_SERVERS=10
PGBOUNCER_POOL_SIZE=50
PGBOUNCER_MAX_CLIENT_CONN=100

# Security
RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT_PER_MINUTE=5
FAILED_LOGIN_BLOCK_DURATION=15

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/backups/academic
